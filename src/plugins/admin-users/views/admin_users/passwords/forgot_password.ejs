<div class="login-box">
    <div class="card">
        <div class="card-body login-card-body">
            <div class="login-logo">
                <a href="<%- SITEURL+'/admin'%>" class="css-logo"><img src="<%- SITEURL+'/public/uploads/'+configure.logo %>"/></a>
            </div>
            <p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>
            <form action="/admin/forgot-password" method="post" novalidate>
                <div class="input-group mb-3">
                    <input type="email" class="form-control" name="email" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-info btn-block">Request new password</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <div class="social-auth-links text-center mb-3 3 mt-3">
                <p>- OR -</p>
                <a href="/admin">SignIn from here</a>
            </div>
        </div>
    </div>
</div>