<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">
                    <%- misc.title%>
                </h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/user-manager">Users</a></li>
                    <li class="breadcrumb-item">Edit</li>
                </ol>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary card-outline card-tabs">
                    <div class="card-header p-0 pt-1 border-bottom-0">
                        <ul class="nav nav-tabs" id="custom-tabs-two-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="custom-tabs-two-profile-tab" data-toggle="pill" href="#custom-tabs-two-profile" role="tab" aria-controls="custom-tabs-two-profile" aria-selected="true">Profile</a>
                            </li>
                            <!-- <li class="nav-item">
                                <a class="nav-link" id="custom-tabs-two-destinations-tab" data-toggle="pill" href="#custom-tabs-two-destinations" role="tab" aria-controls="custom-tabs-two-destinations" aria-selected="false">Destinations</a>
                            </li> -->
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content" id="custom-tabs-two-tabContent">
                            <div class="tab-pane fade show active" id="custom-tabs-two-profile" role="tabpanel" aria-labelledby="custom-tabs-two-profile-tab">
                                <form id="form" enctype="multipart/form-data" method="post" action="/user-manager/update" novalidate>
                                    <input type="hidden" name="_id" value="<%- response._id %>">
                                    <div class="row">
                                        <div class="col-sm-6 form-group">
                                            <label for="name">Name</label>
                                            <input type="text" id="displayName" name="displayName" placeholder="Full name" value="<%- response.displayName %>" class="form-control">
                                        </div>                                       
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6 form-group">
                                            <label for="email">Email</label>
                                            <input type="email" id="email" name="email" placeholder="Email" value="<%- response.email %>" class="form-control">
                                        </div>                                        
                                    </div>
                                    <div class="col-sm-2 form-group">
                                        <label for="password">Profile picture</label>
                                        <div class="avatar-upload">
                                            <!-- <div class="avatar-edit">
                                                <input type="file" id="imageUpload" name="profileImage" accept=".png, .jpg, .jpeg" />
                                                <label for="imageUpload"></label>
                                            </div> -->
                                            <div class="avatar-preview">
                                                <% if(response.profileImage){ %>
                                                    <div id="imagePreview" style="background-image: url('https://techyroots.com/polygonApi/assets/images/<%= response.profileImage %>');">
                                                    </div>
                                                    <% }else {%>
                                                        <div id="imagePreview" style="background-image: url('/public/dist/img/avatar.png');">
                                                        </div>
                                                        <% } %>
                                            </div>
                                        </div>
                                    </div>                             
                                    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                                </form>
                            </div>
                            <!-- <div class="tab-pane fade" id="custom-tabs-two-destinations" role="tabpanel" aria-labelledby="custom-tabs-two-destinations-tab">                              
                                /.card
                            </div> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    </div>
</section>
<%- include('./crud.ejs')%>